{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./src",
    "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "pretty": true,
    "paths": {
      "@@actions": ["actions"],
      "@@consts": ["consts"],
      "@@hooks": ["hooks"],
      "@@routes": ["routes"],
      "@@services": ["services"],
      "@@store": ["store"],
      "@@thunks": ["thunks"],
      "@@types": ["types"],
      "@@utils": ["utils"],
      "@@view/app": ["view/app"],
      "@@view/components": ["view/components"],
      "@@view/containers": ["view/containers"],
      "@@view/pages": ["view/pages"],
      "@@view/styles": ["view/styles"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
